SELECT 
    br.borrow_id,
    s.student_name,
    b.title,
    GREATEST(DATEDIFF(CURDATE(), br.borrow_date) - 7, 0) * 10 AS fine_amount
FROM borrow_record br
JOIN student s ON br.student_id = s.student_id
JOIN book b ON br.book_id = b.book_id
WHERE br.return_date IS NULL;




